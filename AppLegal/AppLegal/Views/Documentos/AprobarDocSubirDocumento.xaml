<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLegal.Views.Documentos.AprobarDocSubirDocumento"
             Title="{Binding nombre}">
    <ContentPage.Content>
        <StackLayout>
            
            <Image x:Name="Imagen"
                   HeightRequest="240"
                ></Image>
            
            <Button Clicked="btnElegirDocumento"
                    
                Text="Elegir Imagen">
            
            </Button>
            <Button Clicked="btnElegirPdfAsync"
                    Text="Elegir Pdf">
                
            </Button>
            <Button Clicked="btnSubirDocumentoAsync"
                Text="Subir Documento">

            </Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>